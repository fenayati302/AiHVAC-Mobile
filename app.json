{
  "expo": {
    "name": "NEXUS HVAC",
    "slug": "nexus-hvac-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nexus.hvac",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan device QR codes and barcodes.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to save device information."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.nexus.hvac",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow NEXUS HVAC to access your camera to scan device codes."
        }
      ]
    ]
  }
}